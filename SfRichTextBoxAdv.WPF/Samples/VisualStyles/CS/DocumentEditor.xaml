    <Syncfusion:RibbonWindow.StatusBar>
        <Syncfusion:RibbonStatusBar Height="25">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Margin="10,0,0,5" FontSize="12" ToolTip="Page number in document.">
                        <this:RunAdv RunText="Page :" Foreground="{Binding Path=Foreground, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Syncfusion:RibbonStatusBar}}}"/>
                        <this:RunAdv x:Name="currentPageNumberRun" Foreground="{Binding Path=Foreground, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Syncfusion:RibbonStatusBar}}}"/>
                        <this:RunAdv RunText="of" Foreground="{Binding Path=Foreground, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Syncfusion:RibbonStatusBar}}}"/>
                        <this:RunAdv x:Name="pagecountRun" Foreground="{Binding Path=Foreground, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Syncfusion:RibbonStatusBar}}}"/>
                    </TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1">
                    <Syncfusion:RibbonButton Style="{StaticResource StatusBarRibbonButtonStyle}" SizeForm="ExtraSmall" SmallIcon="/Assets/PrintLayout.png" Command="Syncfusion:SfRichTextBoxAdv.LayoutTypeCommand" CommandTarget="{Binding ElementName=richTextBoxAdv}" CommandParameter="Pages" ToolTipService.ShowOnDisabled="True"  ToolTip="Print Layout"/>
