                    <TextBlock FontSize="12" VerticalAlignment="Center" Margin="5,0,0,0">
                        <this:RunAdv RunText="{Binding ZoomFactor, Mode=OneWay, Converter={StaticResource PercentageStringConverter}}" Foreground="{Binding Path=Foreground, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Syncfusion:RibbonStatusBar}}}"/>
                        <this:RunAdv RunText="%" Foreground="{Binding Path=Foreground, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Syncfusion:RibbonStatusBar}}}"/>
                    </TextBlock>
                    <Slider x:Name="rangeslider" Style="{StaticResource SliderStyle}" Focusable="False" Value="{Binding ZoomFactor, Mode=TwoWay, Converter={StaticResource PercentageDoubleConverter}}"
                             Foreground="{Binding Path=Foreground, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Syncfusion:RibbonStatusBar}}}" TickFrequency="0.1" Width="150" TickPlacement="None" Minimum="0.1" Maximum="5" ToolTip="Zoom" />
                </StackPanel>
            </Grid>
        </Syncfusion:RibbonStatusBar>
