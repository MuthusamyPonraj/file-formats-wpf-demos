<syncfusion:ChromelessWindow  x:Class="PPTXToImage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
        Title="Manipulating SmartArt"
    WindowStartupLocation="CenterScreen"
	Width="405" Height="250"
	Icon="App.ico"
	syncfusion:SkinStorage.VisualStyle="Metro"
        >
    <Grid x:Name="LayoutRoot" Margin="0,0,0,-3">
        <Image Name="image1" VerticalAlignment="Top" Stretch="Uniform" Height="71" />

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,76,0,89" TextAlignment="Justify" RenderTransformOrigin="0.5,0.75">

            <TextBlock.Text>
                Click the button to view the PowerPoint Presentation generated by
                Essential Presentation. This sample illustrates the how to add new node to the main and child node collection by Essential Presentation.
            </TextBlock.Text>
        </TextBlock>
        <Button Content="Manipulate SmartArt" Click="btnCreateImage_Click" HorizontalAlignment="Right" Margin="0,0,4,16" VerticalAlignment="Bottom" Width="134" Height="25"/>

    </Grid>
</syncfusion:ChromelessWindow >
