<syncfusion:ChromelessWindow  x:Class="PPTXToImage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
        Title="Customizing Appearance"
    WindowStartupLocation="CenterScreen"
	Width="405" Height="250"
	Icon="App.ico"
	syncfusion:SkinStorage.VisualStyle="Metro"
        >
    <Grid x:Name="LayoutRoot" Margin="0,0,0,-3">
        <Image Name="image1" VerticalAlignment="Top" Stretch="Uniform" Height="71" />

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,76,0,89" TextAlignment="Justify" RenderTransformOrigin="0.5,0.75">

            <TextBlock.Text>
                Click the button to view PowerPoint Presentation generated by
                Essential Presentation. This sample illustrates editing existing SmartArt diagram properties.
            </TextBlock.Text>
        </TextBlock>
        <Button Content="Customize SmartArt" Click="btnCreateImage_Click" HorizontalAlignment="Right" Margin="0,0,4,16" VerticalAlignment="Bottom" Width="129" Height="25"/>
        <RadioButton x:Name="radioButton" Content="PowerPoint Presentation" IsChecked="True" HorizontalAlignment="Left" Margin="0,183,0,0" VerticalAlignment="Top" Height="25" Width="152"/>
        <RadioButton x:Name="radioButton1" Content="PDF Document" HorizontalAlignment="Left" Margin="157,183,0,0" VerticalAlignment="Top" Height="25" RenderTransformOrigin="1.613,0.587"/>

    </Grid>
</syncfusion:ChromelessWindow >
