<syncfusion:ChromelessWindow  x:Class="PPTXToImage.Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
        Title="PPTX To Image"
    WindowStartupLocation="CenterScreen"
	Width="405" Height="250"
	Icon="App.ico"
	syncfusion:SkinStorage.VisualStyle="Metro"
        >
    <Grid x:Name="LayoutRoot" Margin="0,0,0,-3">
        <Image Name="image1" VerticalAlignment="Top" Stretch="Uniform" Height="71" />

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,76,0,89" TextAlignment="Justify" RenderTransformOrigin="0.5,0.75">

            <TextBlock.Text>
                Click the button to view the images generated by
                Essential Presentation. This sample illustrates the slide conversion of a Microsoft PowerPoint Presentation into an image.
            </TextBlock.Text>
        </TextBlock>
        <TextBox Height="26" HorizontalAlignment="Left" Margin="6,139,0,0" Name="txtFile" VerticalAlignment="Top" Width="339" Text="" />
        <Button Content=". . ." Height="26" HorizontalAlignment="Left" Margin="361,139,0,0" Name="btnBrowse" VerticalAlignment="Top" Width="36" Click="btnBrowse_Click" RenderTransformOrigin="0.972,0.594" />
        <Button Content="Presentation To Image" Click="btnCreateImage_Click" HorizontalAlignment="Right" Margin="0,0,4,16" VerticalAlignment="Bottom" Width="134" Height="25"/>

    </Grid>
</syncfusion:ChromelessWindow >
