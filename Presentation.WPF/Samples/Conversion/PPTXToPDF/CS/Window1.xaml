<syncfusion:ChromelessWindow x:Class="PPTXToPdf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
        Title="PPTX To PDF"
    WindowStartupLocation="CenterScreen"
	Width="400" Height="250"
	Icon="App.ico"
	syncfusion:SkinStorage.VisualStyle="Metro"
        >
    <Grid x:Name="LayoutRoot" Margin="0,0,0,-1">
        <Image Name="image1" VerticalAlignment="Top" Stretch="Uniform" Height="71" />

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,82,0,83" TextAlignment="Justify">

            <TextBlock.Text>
                Click the button to view an PDF generated by
            Essential Presentation.  This sample illustrates the conversion of a Microsoft PowerPoint Presentation into a PDF format.
            
            </TextBlock.Text>
        </TextBlock>
        <Button Content="Presentation To PDF" Click="btnCreatePdf_Click" HorizontalAlignment="Right" Margin="0,0,5,13" VerticalAlignment="Bottom" Width="139" Height="25">
        </Button>
        <TextBox Height="26" HorizontalAlignment="Left" Margin="6,141,0,0" Name="txtFile" VerticalAlignment="Top" Width="330" Text="" />
        <Button Content=". . ." Height="26" HorizontalAlignment="Left" Margin="355,141,0,0" Name="btnBrowse" VerticalAlignment="Top" Width="36" Click="btnBrowse_Click" />
    </Grid>
</syncfusion:ChromelessWindow>
