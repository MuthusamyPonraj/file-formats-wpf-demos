<syncfusion:ChromelessWindow  x:Class="PPTXToImage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
        Title="Chart Creation"
    WindowStartupLocation="CenterScreen"
	Width="405" Height="250"
	Icon="App.ico"
	syncfusion:SkinStorage.VisualStyle="Metro"
        >
    <Grid x:Name="LayoutRoot" Margin="0,0,0,-3">
        <Image Name="image1" VerticalAlignment="Top" Stretch="Uniform" Height="71" />

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,76,0,89" TextAlignment="Justify" RenderTransformOrigin="0.5,0.75">

            <TextBlock.Text>
                Click the button to view the created Chart in PowerPoint Presentation by
                Essential Presentation. This sample demonstrates how to create Chart and add it to the slide.
            </TextBlock.Text>
        </TextBlock>
        <Button Content="Create Chart" Click="btnCreateImage_Click" HorizontalAlignment="Right" Margin="0,0,4,16" VerticalAlignment="Bottom" Width="140" Height="25"/>

    </Grid>
</syncfusion:ChromelessWindow >
