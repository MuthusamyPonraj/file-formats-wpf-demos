<syncfusion:ChromelessWindow x:Class="ModifyAnimation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
        Title="Modifying Animation"
    WindowStartupLocation="CenterScreen"
	Width="397.694" Height="228.592"
	Icon="App.ico"
	syncfusion:SkinStorage.VisualStyle="Metro"
        >
    <Grid x:Name="LayoutRoot" Margin="0,0,-5.333,-11.333">
        <Image Name="image1" VerticalAlignment="Top" Stretch="Uniform" Height="82" Margin="0,1,0,0" />

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,83,10,43" TextAlignment="Justify">
            
            <TextBlock.Text>
                Click the button to view a PowerPoint Presentation with modified animation effect generated by
            Essential Presentation.  Please note that MS PowerPoint viewer or PowerPoint is
            required to view the resultant Presentation.
            </TextBlock.Text>
        </TextBlock>
		<Button Click="btnInputTemplate_Click" HorizontalAlignment="Center" Margin="162,0,137.833,25.333" VerticalAlignment="Bottom" Width="auto" Height="24">
            <StackPanel Orientation="Horizontal">
                <Image Name="imgbut" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <TextBlock Text=" Input Template " Margin="2 " HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </StackPanel>
         </Button>
        <Button Click="btnCreatePresn_Click" HorizontalAlignment="Right" Margin="0,0,15.833,25.333" VerticalAlignment="Bottom" Width="auto" Height="24">
           
            <StackPanel Orientation="Horizontal" Width="103">
                <Image Name="imgbut1" Margin="2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Text="Modify Animation" Margin="2 " HorizontalAlignment="Right" VerticalAlignment="Center" Width="95"/>
            </StackPanel>
        </Button>
    </Grid>
</syncfusion:ChromelessWindow>
