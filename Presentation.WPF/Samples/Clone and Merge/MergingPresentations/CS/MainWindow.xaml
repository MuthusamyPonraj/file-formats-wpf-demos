<syncfusion:ChromelessWindow x:Class="Cloning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
        Title="Merging Presentations"
    WindowStartupLocation="CenterScreen"
	Width="400" Height="336.567"
	Icon="App.ico"
	syncfusion:SkinStorage.VisualStyle="Metro"
        >
    <Grid x:Name="LayoutRoot" Margin="0,0,0,-1">
        <Image Name="image1" VerticalAlignment="Top" Stretch="Uniform" Height="71" />

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,82,0,0" TextAlignment="Justify">

            <TextBlock.Text>
                Click the button to view a merged PowerPoint Presentation generated by
            Essential Presentation. Please note that MS PowerPoint viewer is required to 
            view the resultant Presentation.

            </TextBlock.Text>
        </TextBlock>
        <TextBox Height="26" HorizontalAlignment="Left" Margin="6,215,0,0" Name="txtFile" VerticalAlignment="Top" Width="310" Text="" />
        <Button Content="Browse" Height="26" HorizontalAlignment="Left" Margin="331,215,0,0" Name="btnBrowse" VerticalAlignment="Top" Width="60" Click="btnBrowse_Click" />
        <Button Content="Merge Document" HorizontalAlignment="Left" VerticalAlignment="Top" Width="110" Click="btnMergeDocument_Click" Margin="281,276,0,0" Height="25"/>
        <TextBox Height="26" TextWrapping="Wrap" Name="txtFile1" VerticalAlignment="Top" Margin="6,157,78,0" Text=""/>
        <Button Content="Browse" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Margin="331,159,0,0" Height="26" Click="btnBrowse1_Click"/>
        <Label Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,135,0,0" Height="11"/>
        <Label Content="Source" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,132,0,0" FontWeight="Bold" RenderTransformOrigin="0.922,0.18"/>
        <Label Content="Destination" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,189,0,0" FontWeight="Bold"/>
        <RadioButton x:Name="radioDestination" Content="Use Destination Theme" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,253,0,0" IsChecked="True"/>
        <RadioButton x:Name="radioSource" Content="Keep Source Formatting" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="169,253,0,0"/>
    </Grid>
</syncfusion:ChromelessWindow>
