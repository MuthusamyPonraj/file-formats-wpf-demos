<syncfusion:ChromelessWindow x:Class="Cloning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
        Title="Cloning Slide"
    WindowStartupLocation="CenterScreen"
	Width="417.91" Height="317.164"
	Icon="App.ico"
	syncfusion:SkinStorage.VisualStyle="Metro"
        >
    <Grid x:Name="LayoutRoot" Height="284" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Image Name="image1" VerticalAlignment="Top" Stretch="Uniform" Height="71" />

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,82,0,40" TextAlignment="Justify">

            <TextBlock.Text>
                Click the button to view a PowerPoint Presentation generated by
            Essential Presentation. Please note that MS PowerPoint viewer is required to 
            view the resultant Presentation.

            </TextBlock.Text>
        </TextBlock>
        <Button Content="Generate Document" Name="btnGenerateDocument" Click="btnGeneateDocument_Click" HorizontalAlignment="Right" Margin="0,0,5,10" VerticalAlignment="Bottom"  Height="25" Width="115"/>
        <TextBox Height="26" HorizontalAlignment="Left" Margin="6,141,0,0" Name="txtFile" VerticalAlignment="Top" Width="330" Text="" />
        <Button Content="Browse" Height="26" HorizontalAlignment="Left" Margin="354,141,0,0" Name="btnBrowse" VerticalAlignment="Top" Width="53" Click="btnBrowse_Click" />
        <RadioButton x:Name="radioDestination" Content="Use Destination Theme" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,221,264,0" IsChecked="True" Height="15" Width="142" RenderTransformOrigin="-0.208,0.029"/>
        <RadioButton x:Name="radioSource" Content="Keep Source Formatting" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="189,221,0,0" Height="16" Width="147"/>
        <TextBox Height="26" Name="destTextBox" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="330" Text="" Margin="6,180,0,0"/>
        <Button x:Name="destButton" Content="Browse"  Height="26" HorizontalAlignment="Left" VerticalAlignment="Top" Width="53" Margin="354,180,0,0" Click="destButton_Click"/>
    </Grid>
</syncfusion:ChromelessWindow>
