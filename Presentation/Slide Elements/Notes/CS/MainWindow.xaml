<syncfusion:ChromelessWindow x:Class="Notes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
        Title="Notes"
    WindowStartupLocation="CenterScreen"
	Width="367.511" Height="284"
	Icon="App.ico"
	syncfusion:SkinStorage.VisualStyle="Metro"
        >
    <Grid x:Name="LayoutRoot">
        <Image Name="image1" VerticalAlignment="Top" Stretch="Uniform" Height="82" />

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,79,0,-15" TextAlignment="Justify">

            <TextBlock.Text>
                Click the button to view the document generated by Essential Presentation. 
				Please note that Microsoft PowerPoint viewer or Adobe Reader is 
				required to view the resultant Presentation or PDF respectively.
            </TextBlock.Text>
        </TextBlock>
        <Button Click="btnCreatePresn_Click" HorizontalAlignment="Right" Margin="0,0,5,15" VerticalAlignment="Bottom" Width="auto" Height="25">

            <StackPanel Orientation="Horizontal">
                <Image Name="imgbut" Margin="2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Text="Generate Document" Margin="2 " HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <RadioButton IsChecked="True" Height="16" HorizontalAlignment="Left" Margin="14,0,0,69" Name="btnCreatePresentation" VerticalAlignment="Bottom" Width="120">Create Presentation</RadioButton>
        <RadioButton Height="16" HorizontalAlignment="Right" Margin="0,0,50,69" Name="btnPresentationToPDF" VerticalAlignment="Bottom" Width="120">Presentation To PDF</RadioButton>
    </Grid>
</syncfusion:ChromelessWindow>
