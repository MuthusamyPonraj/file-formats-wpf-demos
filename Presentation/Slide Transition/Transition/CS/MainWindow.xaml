<syncfusion:ChromelessWindow x:Class="Transition.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
        Title="Slide Transition"
    WindowStartupLocation="CenterScreen"
	Width="401.702" Height="224.656"
	Icon="App.ico"
	syncfusion:SkinStorage.VisualStyle="Metro"
        >
    <Grid x:Name="LayoutRoot" Margin="0,0,-5.333,-18.333">
        <Image Name="image1" VerticalAlignment="Top" Stretch="Uniform" Height="82" />

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,87,10,52" TextAlignment="Justify">

            <TextBlock.Text>
                Click the button to view the created PowerPoint file with slide transition effects 
generated by Essential Presentation. Please note that Microsoft PowerPoint viewer  
is required to view the resultant document.
            </TextBlock.Text>
        </TextBlock>
        <Button Click="btnCreatePresn_Click" HorizontalAlignment="Right" Margin="0,0,14.833,30.333" VerticalAlignment="Bottom" Width="auto" Height="26">

            <StackPanel Orientation="Horizontal">
                <Image Name="imgbut" Margin="2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Text="Create Presentation" Margin="2 " HorizontalAlignment="Right" VerticalAlignment="Center" RenderTransformOrigin="0.427,0.54"/>
            </StackPanel>
        </Button>
    </Grid>
</syncfusion:ChromelessWindow>
