<syncfusion:ChromelessWindow x:Class="Macro_Preservation.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="Macro Preservation"
	syncfusion:SkinStorage.VisualStyle="Metro"
    WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="365" Height="220"
         >
    <Grid>
        <Image Name="image1" VerticalAlignment="Top" Height="82" Stretch="Fill"/>

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,77,0,0">

            <TextBlock.Text>
                Click the button to view the generated Word document. Please note that Microsoft Word Viewer or Microsoft Word is required to view the resultant Word document.
            </TextBlock.Text>
        </TextBlock>
        <Grid Margin="5,140,5,10">
            <Grid Grid.Column="1" Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Click="Button_Click1" Width="111" Height="27" Padding="10,5,10,5" HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="View Template" Margin="48,0,0,-5" Grid.RowSpan="2"/>
                <Button Click="Button_Click" Width="111" Height="27" Padding="10,5,10,5" HorizontalAlignment="Right" Content="Generate" Margin="0,0,47,-5" Grid.RowSpan="2" VerticalAlignment="Bottom"/>
            </Grid>
        </Grid>

    </Grid>
</syncfusion:ChromelessWindow>