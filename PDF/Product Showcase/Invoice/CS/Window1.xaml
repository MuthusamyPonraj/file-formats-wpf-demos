<syncfusion:ChromelessWindow  x:Class="Invoice.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
	syncfusion:SkinStorage.VisualStyle="Metro"
    Title="Invoice"
    WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="360" Height="338"
    Icon="Resources\pdf_button.png"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="82"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Stretch="Fill" Name="image1" VerticalAlignment="Top" />
        <StackPanel Grid.Row="1">
            <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,2,3,0" TextAlignment="Justify">
            <TextBlock.Text>
            Click the button to view an PDF document generated by
            Essential PDF.  Please note that Adobe Reader or its equivalent is
            required to view the resultant document.
            </TextBlock.Text>
        </TextBlock>
            <GroupBox Margin="7,5,7,0" Header="Invoice" Width="331">
                <WrapPanel Margin="15,5,0,5">
                    <Label FontWeight="Bold">Select an ID from the list</Label>
                    <ListBox Name="listCustomerID" Margin="10,0,10,0" Width="170" Height="90"></ListBox>
                    <Button Click="Button_Click"  Margin="185,-28,0,0" HorizontalAlignment="Right" VerticalAlignment="Center" Width="auto" Height="25" BorderBrush="LightBlue">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Generate Invoice" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </StackPanel>
                    </Button>
                </WrapPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</syncfusion:ChromelessWindow>
