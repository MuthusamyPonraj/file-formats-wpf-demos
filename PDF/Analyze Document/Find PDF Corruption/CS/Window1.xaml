<syncfusion:ChromelessWindow  x:Class="Find_PDF_Corruption.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
	syncfusion:SkinStorage.VisualStyle="Metro"
    Title="Find PDF Corruption"
    WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="365" Height="224"
     >
    <Grid x:Name="LayoutRoot">
        <Image Name="image1" VerticalAlignment="Top" Stretch="Fill" Height="82" />

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,77,0,1" TextAlignment="Justify">
            <TextBlock.Text>
            Click the button to view if any syntax issues found in the PDF document.
            </TextBlock.Text>
        </TextBlock>
        <Button Click="Button_Click" HorizontalAlignment="Right" Margin="0,0,5,17" VerticalAlignment="Bottom" Width="auto" Height="25" BorderBrush="LightBlue">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Find Corruption" Margin="2 " HorizontalAlignment="Right" VerticalAlignment="Center" Width="89"/>
            </StackPanel>
        </Button>
    </Grid>
</syncfusion:ChromelessWindow>
