<syncfusion:ChromelessWindow  x:Class="PDF_Compression.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
	syncfusion:SkinStorage.VisualStyle="Metro"
    Title="PDF Compression" 
        WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="365" Height="320">
    <Grid x:Name="LayoutRoot">
        <Image Name="image1" VerticalAlignment="Top" Stretch="Fill" Height="82" />
        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="10,5,15,5" Margin="0,77,0,1" TextAlignment="Justify">
            <TextBlock.Text>
            Click the button to view an PDF document generated by
            Essential PDF.  Please note that Adobe Reader or its equivalent is
            required to view the resultant document.
            </TextBlock.Text>
        </TextBlock>
        <GroupBox HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Center" Header="Choose the compression level">
            <ComboBox Margin="15,2,0,0" Name="compComBox">
                <ComboBoxItem>None</ComboBoxItem>
                <ComboBoxItem>BelowNormal</ComboBoxItem>
                <ComboBoxItem>BestSpeed</ComboBoxItem>
                <ComboBoxItem>Normal</ComboBoxItem>
                <ComboBoxItem>AboveNormal</ComboBoxItem>
                <ComboBoxItem>Best</ComboBoxItem>
            </ComboBox>
        </GroupBox>
        <GroupBox HorizontalAlignment="Right" Margin="0,20,10,0" VerticalAlignment="Center" Header="Image Compression">
            <ComboBox Margin="15,2,0,0" Name="imgComBox">
                <ComboBoxItem>Minimum</ComboBoxItem>
                <ComboBoxItem>Low</ComboBoxItem>
                <ComboBoxItem>Medium</ComboBoxItem>
                <ComboBoxItem>High</ComboBoxItem>
                <ComboBoxItem>Maximum</ComboBoxItem>
            </ComboBox>
        </GroupBox>
        <Button Click="Button_Click" HorizontalAlignment="Right" Margin="0,0,14,67" VerticalAlignment="Bottom" Width="auto" Height="25" BorderBrush="LightBlue">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Generate PDF" Margin="2 " HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <TextBox Name="textBox1" VerticalAlignment="Bottom" IsReadOnly="True" Height="55" HorizontalAlignment="Stretch"></TextBox>
    </Grid>
</syncfusion:ChromelessWindow>
