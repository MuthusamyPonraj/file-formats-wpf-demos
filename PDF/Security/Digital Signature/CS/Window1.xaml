<syncfusion:ChromelessWindow  x:Class="DigitalSignature.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
	syncfusion:SkinStorage.VisualStyle="Metro"
    Title="Digital Signature"
    WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="481" Height="647"
    Icon="Resources\pdf_button.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="82"/>
            <RowDefinition Height="320*" />
            <RowDefinition Height="65*"/>
        </Grid.RowDefinitions>
        <Image Stretch="Fill" Name="image1"  Grid.Row="0" />
        <StackPanel Grid.Row="1" Margin="0,0,-6,0">
            <TextBlock TextAlignment="Justify" FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5">
                <TextBlock.Text>
                    Click the button to view an PDF document generated by
            Essential PDF.  Please note that Adobe Reader or its equivalent is
            required to view the resultant document.
                </TextBlock.Text>
            </TextBlock>
            
                <StackPanel Margin="5,3,0,0" Orientation="Horizontal">
                    <Image Source="Resources/label_Image.gif" Width="17" Height="17"/>
                    <TextBlock TextDecorations="Underline" Foreground="MidnightBlue" FontWeight="SemiBold"><Run Text="Signature Settings"/></TextBlock>
                </StackPanel>
                <StackPanel Margin="20,5,-0.333,0" Orientation="Horizontal">
                    <Label Content="Cryptographic Standard" RenderTransformOrigin="0.562,0.513"/>
                    <RadioButton GroupName="list2" x:Name="radioBtnCMS" IsChecked="True" Margin="5,0,0,0" VerticalAlignment="Center" Content="CMS"/>
                    <RadioButton GroupName="list2" x:Name="radioBtnCAdES" VerticalAlignment="Center" Margin="15,0,0,0" Content="CAdES"/>
                </StackPanel>
                <StackPanel Margin="20,5,-1,0" Orientation="Horizontal" Height="41">
                    <Label Content="Digest Algorithm " RenderTransformOrigin="0.562,0.513" Margin="0,5,0,0.667" />
                    <RadioButton GroupName="list3" x:Name="radioBtnStandardSHA1" Margin="40,0,0,0" VerticalAlignment="Center" Content="SHA1"/>
                    <RadioButton GroupName="list3" x:Name="radioBtnAuthorSHA256"  IsChecked="True" VerticalAlignment="Center" Margin="15,0,0,0" Content="SHA256"/>
                    <RadioButton GroupName="list3" x:Name="radioBtnAuthorSHA384" VerticalAlignment="Center" Margin="15,13,0,13.333" Content="SHA384   "/>
                </StackPanel>
                <StackPanel Margin="124,5,10,0" Orientation="Horizontal" Height="25">
                    <RadioButton GroupName="list3" x:Name="radioBtnAuthorSHA512" VerticalAlignment="Center" Margin="40,0,0,0" Content="SHA512"/>
                    <RadioButton GroupName="list3" x:Name="radioBtnAuthorRIPEMD160" VerticalAlignment="Center" Margin="15,0,0,0" Content="RIPEMD160"/>


                </StackPanel>
          
            <StackPanel Margin="5,3,0,0" Orientation="Vertical">
                <TextBlock TextDecorations="Underline" Foreground="MidnightBlue" FontWeight="SemiBold"><Run Text="Sign New Pdf Document"/></TextBlock>
                <StackPanel Margin="20,5,0,0" Orientation="Horizontal">
                    <Label Content="Standard Type " RenderTransformOrigin="0.562,0.513" Margin="0,5,0,0.667" Height="30" />
                    <RadioButton GroupName="list1" x:Name="radioBtnStandard" IsChecked="True" Margin="50,0,0,0" VerticalAlignment="Center" Content="Standard"/>
                    <RadioButton GroupName="list1" x:Name="radioBtnAuthor" VerticalAlignment="Center" Margin="15,0,0,0" Content="Author"/>
                    <Button x:Name="btnNewPDF" Click="btnNewPDF_Click" Width="80" Height="25" Margin="50,0.167,174,0.166" BorderBrush="LightBlue">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Generate PDF" Margin="2 " HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>

            <StackPanel Margin="5,20,0,0" Orientation="Horizontal">
                <Image Source="Resources/label_Image.gif" Width="17" Height="17"></Image>
                <TextBlock TextDecorations="Underline" Foreground="MidnightBlue" FontWeight="SemiBold">Sign Existing Pdf Document</TextBlock>
            </StackPanel>
            <StackPanel Margin="15,5,0,0" Orientation="Horizontal">
                <Label>Source</Label>
                <TextBox Name="txtSource" Margin="15,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="310"></TextBox>
                <Button Click="Button_Click_1" Margin="5,0,0,0" Width="20" VerticalAlignment="Center">...</Button>
            </StackPanel>
            <WrapPanel>
                <Label Margin="15,0,0,0" Width="200" Foreground="MidnightBlue" FontWeight="SemiBold">Certificate</Label>
                <Label Margin="20,0,0,0" Width="200" Foreground="MidnightBlue" FontWeight="SemiBold">Signature</Label>
                <Label Margin="15,0,0,0">Certificate</Label>
                <TextBox Name="txtCert" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120"></TextBox>
                <Button Click="Button_Click_2" Margin="5,0,0,0" Width="20" VerticalAlignment="Center">...</Button>
                <Label Margin="10,0,0,0">Reason</Label>
                <TextBox Name="txtReason" Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120"></TextBox>
                <Label Width="63" Margin="15,0,0,0">Password</Label>
                <PasswordBox Name="txtPassword" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" PasswordChar="*"></PasswordBox>
                <Image Name="image2" Margin="5,0,0,0" Source="Resources\tooltipImage.gif" ToolTip="" Height="15" Width="17" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <Label Margin="13,0,0,0">Contact</Label>
                <TextBox Name="txtContact" Margin="8,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120"></TextBox>
                <Label Margin="233,0,0,0">Location</Label>
                <TextBox Name="txtLocation" Margin="4,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120"></TextBox>
            </WrapPanel>
            <Button Click="Button_Click" HorizontalAlignment="Right" Margin="0,5,25,0" Width="auto" Height="25" BorderBrush="LightBlue">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Generate PDF" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <TextBox Name="DebugBox" FontWeight="SemiBold" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.Row="2"></TextBox>
    </Grid>
</syncfusion:ChromelessWindow >