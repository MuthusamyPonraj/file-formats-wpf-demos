<syncfusion:ChromelessWindow  x:Class="DigitalSignatureValidation.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
	syncfusion:SkinStorage.VisualStyle="Metro"
    Title="Digital Signature Validation"
    WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="350.94" Height="390.029"
     >
    <Grid x:Name="LayoutRoot">

        <Image Name="image1" VerticalAlignment="Top" Stretch="Fill" Height="82" />
        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,77,0,1" TextAlignment="Justify">
            <TextBlock.Text>
                Click the button to validate the signed PDF document signature.
            </TextBlock.Text>
        </TextBlock>
        <Button Click="Button_Click" HorizontalAlignment="Right" Margin="0,0,9.667,217" VerticalAlignment="Bottom" Width="auto" Height="23" BorderBrush="LightBlue">
            <StackPanel Orientation="Horizontal" Width="109">
                <TextBlock Text="Validate Signature" Margin="2 " HorizontalAlignment="Right" VerticalAlignment="Center" Width="114"/>
            </StackPanel>
        </Button>
        <TextBox Name="ResultBox" FontWeight="SemiBold" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="0,161,0.667,1.333"/>
    </Grid>
</syncfusion:ChromelessWindow>
