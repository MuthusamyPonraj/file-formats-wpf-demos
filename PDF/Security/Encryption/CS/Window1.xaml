<syncfusion:ChromelessWindow x:Class="Encryption.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
	syncfusion:SkinStorage.VisualStyle="Metro"
    Title="Encryption"
    WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="379.517" Height="409.642"
    Icon="Resources\pdf_button.png">
    <Grid x:Name="LayoutRoot" Margin="10,0,0,0">
        <Image Name="image1" VerticalAlignment="Top" Stretch="Fill" Height="82" />

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,66,0,10" ><Run Text="Click the button to view an PDF document generated by Essential PDF. Please note that Adobe Reader or its equivalent is required to vie"/><InlineUIContainer/><Run Text="w "/><Run Text="the"/><Run Text=" res"/><Run Text="ult"/><InlineUIContainer/><Run Text="a"/><Run Text="nt document."/></TextBlock>

        <GroupBox Margin="10,0,157,20.667" Height="84" VerticalAlignment="Bottom">
            <GroupBox.Header>
                <Label>Encryption Password</Label>
            </GroupBox.Header>
            <StackPanel>
                <Label FontWeight="Bold">Owner password: syncfusion</Label>
                <Label FontWeight="Bold">User password: password</Label>
            </StackPanel>
        </GroupBox>
        <Button Click="Button_Click"  HorizontalAlignment="Right" Margin="0,0,15,23.667" VerticalAlignment="Bottom" Width="101" Height="36" BorderBrush="LightBlue" RenderTransformOrigin="0.488,-0.56">
            <TextBlock Text="Generate PDF" HorizontalAlignment="Right" VerticalAlignment="Center" RenderTransformOrigin="0.403,-1.875"/>
        </Button>
        <GroupBox Name="groupBox1" Margin="10,123,0,188.667" HorizontalAlignment="Left" Header="Key Size" Width="196">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical" Width="125">
                    <RadioButton GroupName="group1" Name="rdButton40Bit" VerticalAlignment="Center" Width="120" Margin="0,0,0,5" Checked="rdButton40Bit_Checked">40 Bit</RadioButton>
                    <RadioButton GroupName="group1" Name="rdButton256Revision6" VerticalAlignment="Center" Width="120" Margin="0,0,0,0" Checked="rdButton256Revision6_Checked">256 Bit Revision 6</RadioButton>
                </StackPanel>
                <StackPanel Orientation="Vertical" Width="70">
                    <RadioButton GroupName="group1" Name="rdButton128Bit" IsChecked="True" VerticalAlignment="Center" Width="70" Margin="0,0,0,5" Checked="rdButton128Bit_Checked">128 Bit</RadioButton>
                    <RadioButton GroupName="group1" Name="rdButton256Bit" VerticalAlignment="Center" Width="70" Margin="0,0,0,0" Checked="rdButton256Bit_Checked" >256 Bit</RadioButton>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox HorizontalAlignment="Left" Margin="10,80,0,0" Width="256" VerticalAlignment="Center" Header="Encryption Options" Height="59">
            <ComboBox Margin="15,2,0,0" Name="cmbencryptOption" SelectedIndex="0">
                <ComboBoxItem>Encrypt all contents</ComboBoxItem>
                <ComboBoxItem>Encrypt all contents except metadata</ComboBoxItem>
                <ComboBoxItem>Encrypt only attachments</ComboBoxItem>
            </ComboBox>
        </GroupBox>

        <GroupBox Header="Encryption Algorithm" HorizontalAlignment="Right" Margin="0,123,15,188.667" Name="groupBox" Width="137" >
            <StackPanel Orientation="Horizontal" Width="106" Margin="10,0,9.333,9.333">
                <RadioButton Height="16" VerticalAlignment="Center"  HorizontalAlignment="Left" Name="rdButtonRc4" Width="55" Checked="rdButtonRc4_Checked">RC4</RadioButton>
                <RadioButton Height="16" Name="rdButtonAes" HorizontalAlignment="Center" Width="55" IsChecked="True" Checked="rdButtonAes_Checked">AES</RadioButton>
            </StackPanel>
        </GroupBox>

    </Grid>
</syncfusion:ChromelessWindow>
