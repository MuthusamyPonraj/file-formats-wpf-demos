<syncfusion:ChromelessWindow  x:Class="CompressExistingPDF.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
	syncfusion:SkinStorage.VisualStyle="Metro"
    Title="Compress Existing PDF" 
        WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="451" Height="562">
    <Grid x:Name="LayoutRoot" Margin="0,0,-6,-1" Height="529" VerticalAlignment="Top" Width="451">
        <Image Name="image1" VerticalAlignment="Top" Stretch="Fill" Height="82" Margin="0,0,15,0" />
        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="9,5,15,5" Margin="9,93,0,379" TextAlignment="Justify" HorizontalAlignment="Left" Width="428">
           <Run Text="Click the Compress PDF button to view an PDF document generated by Essential PDF. Please note that Adobe Reader or its equivalent is required to view the resultant document."/><InlineUIContainer>               
            </InlineUIContainer></TextBlock>
        <GroupBox x:Name="groupBox" Header="Choose a PDF file to compress" HorizontalAlignment="Left" Height="68" Margin="8,155,0,0" VerticalAlignment="Top" Width="430" FontFamily="Verdana" FontSize="11">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="73*"/>
                    <ColumnDefinition Width="345*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="selectBtn" Grid.Row="0" Content="..." HorizontalAlignment="Right" Width="33" Margin="0,10,0,14" VerticalAlignment="Center" Height="22" Click="selectBtn_Click" Grid.Column="1"/>
                <TextBox x:Name="textBox" Grid.Row="0" HorizontalAlignment="Left" Height="22" TextWrapping="NoWrap" VerticalAlignment="Center" Width="375" Margin="5,10,0,14" Grid.ColumnSpan="2"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="groupBox1" Header="Compression Options" HorizontalAlignment="Left" Height="115" Margin="8,236,0,0" VerticalAlignment="Top" Width="428" FontFamily="Verdana" FontSize="11">
            <Grid Margin="0,0,-2,2">
                <CheckBox x:Name="compressImage" Content="Compress Images" HorizontalAlignment="Left" Height="17" Margin="4,10,0,0" VerticalAlignment="Top" Width="118" Checked="compressImage_Checked" Unchecked="compressImage_Checked"/>
                <Label x:Name="Label1" Content="ImageQuality" HorizontalAlignment="Left" Margin="207,4,0,53" RenderTransformOrigin="0.444,0.304" Width="114"></Label>
                <ComboBox x:Name="imageQuality" HorizontalAlignment="Left" Height="19" Margin="344,6,0,0" VerticalAlignment="Top" Width="49"/>
                <CheckBox x:Name="compressPageContents" Content="Optimize Page Contents" HorizontalAlignment="Left" Height="20" Margin="4,42,0,0" VerticalAlignment="Top" Width="158"/>
                <CheckBox x:Name="optimizeFont" Content="Optimize Font" HorizontalAlignment="Left" Height="20" Margin="4,74,0,0" VerticalAlignment="Top" Width="131"/>
                <CheckBox x:Name="removeMetadata" Content="Remove Metadata Information" HorizontalAlignment="Left" Height="20" Margin="207,42,0,0" VerticalAlignment="Top" Width="196"/>

            </Grid>
        </GroupBox>
        <Button x:Name="button" Content="Compress PDF" HorizontalAlignment="Left" Height="21" Margin="319,371,0,0" VerticalAlignment="Top" Width="113" Click="Button_Click" RenderTransformOrigin="0.575,1.667" FontFamily="Verdana" FontSize="11"/>
        <GroupBox x:Name="groupBox2" Header="Result" HorizontalAlignment="Left" Margin="9,413,0,14" Width="428" Visibility="Visible" VerticalAlignment="Center" FontFamily="Verdana" FontSize="11" Height="100">
            <Grid Margin="0,0,0,18" Height="69">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="9*"/>
                    <ColumnDefinition Width="397*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="label" Content="Original document size:" HorizontalAlignment="Left" Height="29" Margin="0,10,0,0" VerticalAlignment="Top" Width="166" Grid.ColumnSpan="2" Grid.Column="1"/>
                <Label x:Name="ods" Content="" HorizontalAlignment="Left" Height="29" Margin="231,10,0,0" VerticalAlignment="Top" Width="156" Grid.Column="2"/>
                <Label x:Name="label2" Content="Compressed document size:" HorizontalAlignment="Left" Height="26" Margin="0,44,0,-1" VerticalAlignment="Top" Width="166" Grid.ColumnSpan="2" Grid.Column="1"/>
                <Label x:Name="cds" Content="" HorizontalAlignment="Left" Height="26" Margin="231,44,0,-4" VerticalAlignment="Top" Width="156" Grid.Column="2"/>
            </Grid>
        </GroupBox>
    </Grid>
</syncfusion:ChromelessWindow>
