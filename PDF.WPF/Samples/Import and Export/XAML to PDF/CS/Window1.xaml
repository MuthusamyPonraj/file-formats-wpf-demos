<syncfusion:ChromelessWindow x:Class="Hello_World.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
	syncfusion:SkinStorage.VisualStyle="Metro"
    Title="XAML To PDF"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="365" Height="260">
    <Grid x:Name="LayoutRoot">       
        <Image Name="image1" VerticalAlignment="Top" Stretch="Fill" Height="82"/>
        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,82,0,1" TextAlignment="Justify">
            <TextBlock.Background>
                <ImageBrush/>
            </TextBlock.Background><Run FontFamily="Verdana" FontSize="11" Text="Click the button to view an PDF document generated by Essential PDF. Please note that Adobe Reader or its equivalent is required to view the resultant document."/><LineBreak/><Run/><LineBreak/><Run Text="  "/>
        		<TextBox x:Name="textBox1" Height="23" Width="310" Margin="-10,12,0,0"/>        	
        		<Button Content="...." Width="31" Click="Button_Click_1" Height="24"/>
        	</TextBlock>
        <Button Click="Button_Click" HorizontalAlignment="Right" Margin="0,0,9,10" VerticalAlignment="Bottom" Width="92" Height="24" BorderBrush="LightBlue">
            <StackPanel Orientation="Horizontal" Height="15" Width="80">
                <Image Name="imgbut" Margin="2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Text="Generate PDF" Margin="2,0,2,-1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</syncfusion:ChromelessWindow>
