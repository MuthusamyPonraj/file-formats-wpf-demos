<syncfusion:ChromelessWindow x:Class="NorthwindReport.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
	syncfusion:SkinStorage.VisualStyle="Metro"
    Title="Northwind Report"
    WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="365" Height="341"
    Icon="Resources\pdf_button.png">
    <Grid x:Name="LayoutRoot" Width="365" Margin="0,0,-6,2">
        <Image Name="image1" VerticalAlignment="Top" Stretch="Fill" Height="82" />

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,78,10,0" TextAlignment="Justify" Height="226" VerticalAlignment="Top"><Run Text="Click the button to view an PDF document generated by Essential PDF. Please note that Adobe Reader or its equivalent is required to view the resultant document."/><InlineUIContainer>
        		
        	</InlineUIContainer></TextBlock>
        <Grid Margin="0,-27,0,0" Height="331" VerticalAlignment="Top">
            <CheckBox Content="Built-in styles" Height="17" HorizontalAlignment="Left" VerticalAlignment="Top" Name="builtinStyle" Margin="10,167,0,0" Checked="builtinStyle_Checked" Unchecked="builtinStyle_Checked"  >
            </CheckBox>
            <Button Click="Button_Click"  HorizontalAlignment="Right" Margin="0,30,15,17" VerticalAlignment="Center" Width="auto" Height="25" BorderBrush="LightBlue">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Generate PDF" Margin="2 " HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
        <GroupBox Header="Choose built-in styles" Height="119" Margin="10,0,14,11" Name="grpRegion" Visibility="Hidden"  VerticalAlignment="Bottom">
            <Grid>
                <ComboBox Name="styleName" Margin="10,0,176,67" RenderTransformOrigin="0.545,1.353" Height="26" VerticalAlignment="Bottom">
                </ComboBox>
                <CheckBox Content="Header row" Name="headerRow" Margin="10,32,227,43" RenderTransformOrigin="0.557,1.579" IsChecked="True">
                </CheckBox>
                <CheckBox Content="Banded row" Name="bandedRow" Margin="120,34,117,41" RenderTransformOrigin="0.489,1" IsChecked="True">
                </CheckBox>
                <CheckBox Content="First column" Name="firstColumn" Margin="237,33,0,43" RenderTransformOrigin="1.315,0.455" >
                </CheckBox>
                <CheckBox Content="Last row" Name="lastRow" Margin="10,66,227,13" RenderTransformOrigin="1.315,0.455" >
                </CheckBox>
                <CheckBox Content="Banded column" Name="bandedColumn" Margin="120,66,117,12" RenderTransformOrigin="1.315,0.455">
                </CheckBox>
                <CheckBox Content="Last column" Name="lastColumn" Margin="237,66,0,10" RenderTransformOrigin="1.315,0.455">
                </CheckBox>
            </Grid>
        </GroupBox>


    </Grid>
</syncfusion:ChromelessWindow>