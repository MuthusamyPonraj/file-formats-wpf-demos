<syncfusion:ChromelessWindow  x:Class="ImportAndStamp.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
	syncfusion:SkinStorage.VisualStyle="Metro"
     Title="Import and Stamp"
    WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="365" Height="320"
    Icon="Resources\pdf_button.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="82"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Stretch="Fill" Name="image1" VerticalAlignment="Top" />
        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal" Margin="5,5,0,0">
                <Image Source="Resources\label_Image.gif"></Image>
                <TextBlock Margin="5,0,0,0" FontWeight="Bold">Select a document to import</TextBlock>
            </StackPanel>
            <StackPanel Margin="15,5,15,5" Orientation="Horizontal">
                <Label Margin="0,0,4,0">Select a PDF document</Label>
                <TextBox Name="textBoxUrl" Margin="0,0,7,0" VerticalAlignment="Center" Width="142" Text="Essential_Studio.pdf"></TextBox>
                <Button Click="BrowseButton_Click" Margin="0,0,0,0">Browse</Button>
            </StackPanel>
            <StackPanel Margin="15,5,15,5" Orientation="Horizontal" Width="313" HorizontalAlignment="Left">
                <Label Margin="0,0,4,0">Stamping Text</Label>
                <TextBox Name="textBoxStamp" VerticalAlignment="Center" Margin="47,0,0,0" Width="142">Imported using Essential PDF</TextBox>
            </StackPanel>
            <CheckBox Name="checkBoxImage" Margin="20,5,15,5" HorizontalAlignment="Left" Width="120">Image Watermark</CheckBox>
            <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="15,5,15,5" TextAlignment="Justify">
            <TextBlock.Text>
            Click the button to view an PDF document generated by
            Essential PDF.  Please note that Adobe Reader or its equivalent is
            required to view the resultant document.
            </TextBlock.Text>
        </TextBlock>
            <Button Click="Button_Click" Margin="0,0,15,17" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="auto" Height="25" BorderBrush="LightBlue">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Generate PDF" Margin="2 " HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</syncfusion:ChromelessWindow>