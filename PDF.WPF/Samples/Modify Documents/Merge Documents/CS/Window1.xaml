<syncfusion:ChromelessWindow  x:Class="MergeDocuments.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
	syncfusion:SkinStorage.VisualStyle="Metro"
    Title="Merge Documents"
    WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="375" Height="309"
    Icon="Resources\pdf_button.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="82"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Stretch="Fill" Name="image1" VerticalAlignment="Top" />
        <StackPanel Grid.Row="1">
            <StackPanel Margin="5" Orientation="Horizontal">
                <Image Source="Resources\label_Image.gif" HorizontalAlignment="Left"/>
                <Label FontWeight="Bold">Select Documents to Merge</Label>
            </StackPanel>
            <WrapPanel Margin="15,5,15,5" Orientation="Horizontal" ItemHeight="27" Width="335">
                <Label Margin="0,0,34,0" >Select a Document</Label>
                <TextBox Name="textBox1" Margin="0,0,5,0" VerticalAlignment="Center" Width="135" Text="Essential_Pdf.pdf"></TextBox>
                <Button Click="btnBrowse1_Click" Height="23">Browse</Button>
                <Label>Select another document</Label>
                <TextBox Name="textBox2" Margin="0,0,5,0" VerticalAlignment="Center" Width="135" Text="Essential_XlsIO.pdf"></TextBox>
                <Button Click="btnBrowse2_Click" Height="23">Browse</Button>
            </WrapPanel>
            <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Margin="3,5,15,0" TextAlignment="Justify" Padding="5,5,5,5">
            <TextBlock.Text>
            Click the button to view an PDF document generated by
            Essential PDF.  Please note that Adobe Reader or its equivalent is
            required to view the resultant document.

            </TextBlock.Text>
        </TextBlock>
            <Button Click="Button_Click"  HorizontalAlignment="Right" Margin="0,5,15,17" VerticalAlignment="Bottom" Width="auto" Height="25" BorderBrush="LightBlue">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Merge PDF" Margin="2 " HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</syncfusion:ChromelessWindow >
