<syncfusion:ChromelessWindow  x:Class="FormFilling.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
	syncfusion:SkinStorage.VisualStyle="Metro"
    Title="Form Filling"
    WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="365" Height="259"
    Icon="Resources\pdf_button.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="82"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Stretch="Fill" Name="image1" VerticalAlignment="Top" />
        <StackPanel Grid.Row="1">
            
            <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" TextAlignment="Justify">
            <TextBlock.Text>
            Clicking the below button will result in the above template form loaded in the memory, it's fields
            filled with appropriate data and the resultant PDF document being generated using Essential PDF.
            </TextBlock.Text></TextBlock>
            <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" TextAlignment="Justify">
            <TextBlock.Text>
            Please note that Adobe Reader or its equivalent is
            required to view the resultant document.
            </TextBlock.Text>
        </TextBlock>
            <StackPanel Orientation="Horizontal">
            <Button Click="Button_Click_1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,10,10,0">View PDF Form Template
            </Button>
            <Button Click="Button_Click"  HorizontalAlignment="Right" Margin="97,10,0,17" VerticalAlignment="Bottom" Width="104" Height="25" BorderBrush="LightBlue">
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Generate PDF" Margin="2 " HorizontalAlignment="Right" VerticalAlignment="Center" Width="74" />
            </StackPanel>
            </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</syncfusion:ChromelessWindow >