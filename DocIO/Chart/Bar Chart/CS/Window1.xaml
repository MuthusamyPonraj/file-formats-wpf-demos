<syncfusion:ChromelessWindow x:Class="BarChart.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="Bar Chart"
    syncfusion:SkinStorage.VisualStyle="Metro"
    WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="365" Height="220">
    <Grid>
        <Image Name="image1" VerticalAlignment="Top" Height="82" Stretch="UniformToFill" />
        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,77,0,28">
            <TextBlock.Text>
                Click the button to view the generated Word document. Please note that Microsoft Word Viewer or Microsoft Word is required to view the resultant Word document.
            </TextBlock.Text>
        </TextBlock>
        <Button Click="Button_Click" HorizontalAlignment="Center" Margin="0,0,25,20" Width="111" Height="27" Padding="10,5,10,5" VerticalAlignment="Bottom" Content="Generate" TabIndex="0"/>
    </Grid>
</syncfusion:ChromelessWindow>