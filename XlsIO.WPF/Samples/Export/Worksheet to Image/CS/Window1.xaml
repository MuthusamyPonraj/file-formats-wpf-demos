<syncfusion:ChromelessWindow  x:Class="SheetToImage_2008.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="Worksheet to Image" Width="355" Height="216"
        WindowStyle="SingleBorderWindow"
    Icon="App.ico"
   syncfusion:SkinStorage.VisualStyle="Metro"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Image VerticalAlignment="Top" Height="82" Name="image1" Stretch="None"/>
        <TextBlock TextAlignment="Justify" FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,77,0,1" >
            <TextBlock.Text>
            Click the button below to convert the Excel worksheet to image using Essential XlsIO.
            </TextBlock.Text>
        </TextBlock>
        <GroupBox Margin="20,0,0,9.52" Header="Image format" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="52.4" Width="auto">
            <StackPanel Margin="0,6,0,0" Orientation="Horizontal">
                <RadioButton Name="rBtnBitmap" IsChecked="True" Content="Bitmap"/>
                <RadioButton Name="rBtnMetafile" Margin="10,0,0,0" Content="Metafile"/>
            </StackPanel>
        </GroupBox>
        <Button Click="Button_Click" HorizontalAlignment="Right" Margin="0,0,22,41.92" VerticalAlignment="Bottom" Width="108.513" Height="25" BorderBrush="LightBlue">
            <StackPanel Orientation= "Horizontal">
                <TextBlock Text="Convert" Margin="3" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button Click="Button_Input_Click" BorderBrush="LightBlue" Height="25" HorizontalAlignment="Right" Margin="0,0,22,11" VerticalAlignment="Bottom" Width="108.513">
            <StackPanel Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Right" Margin="3" Text="Input Template" VerticalAlignment="Center" />
            </StackPanel>
        </Button>
    </Grid>
</syncfusion:ChromelessWindow>
