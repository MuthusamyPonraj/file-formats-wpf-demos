<syncfusion:ChromelessWindow  x:Class="Document_Properties.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="Document Settings"
    Icon="App.ico"
    syncfusion:SkinStorage.VisualStyle="Metro"
    WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="377" Height="239"
    >
    <Grid>
        <Image VerticalAlignment="Top" Height="82" Name="image1" Stretch="None"/>

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,77,0,1" >
            <TextBlock.Text>
Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please note that MS Excel Viewer or MS Excel is required to view the resultant document.
            </TextBlock.Text>
        </TextBlock>

        <Button Click="Button_Click" HorizontalAlignment="Right" Margin="0,0,9,7" VerticalAlignment="Bottom" Width="70" Height="25" BorderBrush="LightBlue">
            <StackPanel Orientation= "Horizontal">
                <TextBlock Text="Create" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <GroupBox Header="Save As" Height="40" VerticalAlignment="Bottom" Margin="1,0,10,37">
            <StackPanel Orientation="Horizontal" Width="325">
                <RadioButton GroupName="Group1" VerticalContentAlignment="Center" Name="rdButtonxls" Margin="5,0,10,0">Excel 2003</RadioButton>
                <RadioButton GroupName="Group1" VerticalContentAlignment="Center" Name="rdButtonxlsx" Margin="0,0,10,0">Excel 2007</RadioButton>
                <RadioButton GroupName="Group1" VerticalContentAlignment="Center" Name="rdButtonexcel2010" Margin="0,0,10,0">Excel 2010</RadioButton>
                <RadioButton GroupName="Group1" Name="rdButtonexcel2013"  IsChecked="True" VerticalContentAlignment="Center">Excel 2013</RadioButton>
            </StackPanel>
        </GroupBox>
    </Grid>
</syncfusion:ChromelessWindow>