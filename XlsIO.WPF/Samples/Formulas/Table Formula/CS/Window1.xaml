<syncfusion:ChromelessWindow x:Class="TableFormula.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="TableFormula"
    WindowStyle="SingleBorderWindow"
    syncfusion:SkinStorage.VisualStyle="Metro"
    Icon="App.ico"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="445" Height="215">
    <Grid>
        <Image VerticalAlignment="Top" Height="82" Name="image1" Stretch="None"/>
        <TextBlock FontFamily="Verdana" FontSize="11" TextAlignment="Justify" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,77,0,1" >
            <TextBlock.Text>
Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please note that MS Excel Viewer or MS Excel is required to view the resultant document.
            </TextBlock.Text>
        </TextBlock>
        <Button Click="Button_Click" HorizontalAlignment="Right" Margin="0,0,17,17" VerticalAlignment="Bottom" Width="auto" Height="25" BorderBrush="LightBlue">
            <StackPanel Orientation= "Horizontal">
                <TextBlock Text="Create Document" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</syncfusion:ChromelessWindow>
