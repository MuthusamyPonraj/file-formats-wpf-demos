<syncfusion:ChromelessWindow x:Class="DataValidation.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"                             
    Title="Data Validation"
     Icon="App.ico"
     syncfusion:SkinStorage.VisualStyle="Metro"                             
    WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="418" Height="253"
    >
    <Grid>
        <Image VerticalAlignment="Top" Height="92" Name="image1" Stretch="None" />

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,90,0,1" >
           
            <TextBlock.Text>
Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please note that MS Excel Viewer or MS Excel is required to view the resultant document.
            </TextBlock.Text>
        </TextBlock>

        <Button Click="Button_Click" HorizontalAlignment="Right" Margin="0,0,19,6" VerticalAlignment="Bottom" Width="121.863" Height="25" BorderBrush="LightBlue">
            <StackPanel Orientation= "Horizontal">
                <TextBlock Text="Create Document" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <GroupBox Header="Save As" Height="42" VerticalAlignment="Bottom" Margin="18,0,18,37" Width="375">
            <StackPanel Orientation="Horizontal" Width="325">
                <RadioButton GroupName="Group1" VerticalContentAlignment="Center" Name="rdButtonxls" Margin="1,1.5,10,1.5">Excel 2003</RadioButton>
                <RadioButton GroupName="Group1" VerticalContentAlignment="Center" Name="rdButtonxlsx" Margin="1,1.5,10,1.5">Excel 2007</RadioButton>
                <RadioButton GroupName="Group1" VerticalContentAlignment="Center" Name="rdButtonexcel2010" Margin="1,1.5,10,1.5">Excel 2010</RadioButton>
                <RadioButton GroupName="Group1" Name="rdButtonexcel2013" IsChecked="True" VerticalContentAlignment="Center" Margin="1,1.5,10,1.5">Excel 2013</RadioButton>
            </StackPanel>
        </GroupBox>
    </Grid>
</syncfusion:ChromelessWindow>