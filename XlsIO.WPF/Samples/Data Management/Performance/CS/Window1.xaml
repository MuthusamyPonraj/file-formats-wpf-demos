<syncfusion:ChromelessWindow x:Class="Performance.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"                             
    Title="Performance"
      Icon="App.ico"
     syncfusion:SkinStorage.VisualStyle="Metro"                            
    WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize" 
    WindowStartupLocation="CenterScreen"
	Width="400" Height="432"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="82"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Stretch="None" Grid.Row="0" VerticalAlignment="Top"  Name="image1"/>
        <WrapPanel Grid.Row="1">
            <TextBlock Width="348" FontFamily="Verdana" TextAlignment="Justify" FontSize="11" TextWrapping="Wrap" Margin="15,5,0,0">
            <TextBlock.Text>
Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please note that MS Excel Viewer or MS Excel is required to view the resultant document.
            </TextBlock.Text>
        </TextBlock>
            <GroupBox Margin="11,5,3,3" Width="371">
                <WrapPanel>
                    <Label Width="215" Margin="3">Enter the number of Rows</Label>                    
                    <TextBox Name="textBoxRow" Height="23" TextWrapping="Wrap" Text="50000" Width="130"/>                    
                    <Label Width="215" Margin="3">Enter the number of Columns</Label>
                    <TextBox Name="textBoxColumn" Height="23" TextWrapping="Wrap" Text="50" Width="130"/>
                </WrapPanel>
            </GroupBox>
            <StackPanel Orientation="Horizontal" Height="89">
            
                <GroupBox Header="Save As" Height="41" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,40" Width="371">
                    <StackPanel Orientation="Horizontal" Margin="5,2,1,2">
                        <RadioButton GroupName="Group1" VerticalContentAlignment="Center" Name="rdButtonxls" Margin="5.5,0,10,0">Excel 2003</RadioButton>
                        <RadioButton GroupName="Group1" VerticalContentAlignment="Center" Name="rdButtonxlsx" Margin="5.5,0,10,0">Excel 2007</RadioButton>
                        <RadioButton GroupName="Group1" VerticalContentAlignment="Center" Name="rdButtonexcel2010" Margin="5.5,0,10,0">Excel 2010</RadioButton>
                        <RadioButton GroupName="Group1" Name="rdButtonexcel2013"  IsChecked="True" VerticalContentAlignment="Center" Margin="5.5,0,10,0">Excel 2013</RadioButton>
                    </StackPanel>
                </GroupBox>
                <CheckBox Name="checkBoxColumn" VerticalAlignment="Center" Margin="-250,60,150,10" IsChecked="True">Column Style</CheckBox>
                <Button Click="Button_Click" Margin="-130,10,165,10" VerticalAlignment="Bottom" Width="auto" Height="25" BorderBrush="LightBlue">
                    <StackPanel Orientation= "Horizontal">
                        <TextBlock Text="Create Document" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </StackPanel>
                </Button>
                
            </StackPanel>
            <TextBox Name="textLog" Margin="10,0,-10,0" Height="91" Background="#ECE9D8" IsReadOnly="True" Width="371"></TextBox>
        </WrapPanel>
    </Grid>
</syncfusion:ChromelessWindow>
