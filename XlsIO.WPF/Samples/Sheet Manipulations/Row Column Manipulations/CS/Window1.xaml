<syncfusion:ChromelessWindow x:Class="RowColumnManipulations.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="Row Column Manipulations"
    Icon="App.ico"
    WindowStyle="SingleBorderWindow"
    syncfusion:SkinStorage.VisualStyle="Metro"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="400" Height="242"
    >
    <Grid >
        <Image VerticalAlignment="Top" Height="82" Name="image1" Stretch="None"/>

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,77,0,1" >
           
            <TextBlock.Text>
Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please note that MS Excel Viewer or MS Excel is required to view the resultant document.
            </TextBlock.Text>
        </TextBlock>

        <Button Click="Button_Click" HorizontalAlignment="Right" Margin="0,0,4,7" VerticalAlignment="Bottom" Width="118" Height="25" BorderBrush="LightBlue">
            <StackPanel Orientation= "Horizontal">
                <TextBlock Text="CreateDocument" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <GroupBox Header="Save As" Width ="387" Height="40" VerticalAlignment="Bottom" Margin="0,0,0,38">
            <StackPanel Orientation="Horizontal" Width="330">
                <RadioButton GroupName="Group1" VerticalContentAlignment="Center" Name="rdButtonxls" Margin="0,0,15,0">Excel 2003</RadioButton>
                <RadioButton GroupName="Group1" VerticalContentAlignment="Center" Name="rdButtonxlsx" Margin="0,0,15,0">Excel 2007</RadioButton>
                <RadioButton GroupName="Group1" VerticalContentAlignment="Center" Name="rdButtonexcel2010" Margin="0,0,15,0">Excel 2010</RadioButton>
                <RadioButton GroupName="Group1" Name="rdButtonexcel2013" IsChecked="True"  VerticalContentAlignment="Center" Margin="0,0,15,0">Excel 2013</RadioButton>
            </StackPanel>
        </GroupBox>
        <Button Click="Button_Input_Click" BorderBrush="LightBlue" Height="25" Margin="84,0,132,7" VerticalAlignment="Bottom" Width="118">
            <StackPanel Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Right" Margin="2" Text="Input Template" VerticalAlignment="Center" />
            </StackPanel>
        </Button>
    </Grid>
</syncfusion:ChromelessWindow>