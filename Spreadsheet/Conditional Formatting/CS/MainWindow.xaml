<syncfusion:RibbonWindow x:Class="ConditionalFormattingDemo.MainWindow"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:Behavior="clr-namespace:ConditionalFormattingDemo.Behavior"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:Interactivity="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                         Title="{Binding FileName}"
                         DataContext="{Binding ElementName=spreadsheetControl}"
                         Width="1024"
                         Height="720"
                         Icon="App.ico"
						 WindowState="Maximized"
						 ShowHelpButton="False"
                         syncfusion:SkinStorage.VisualStyle="Office2013"
                         WindowStartupLocation="CenterScreen"
                         Closing="RibbonWindow_Closing" 
                         mc:Ignorable="d">
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <syncfusion:SfSpreadsheetRibbon VerticalAlignment="Top"
                                      DataContext="{Binding ElementName=spreadsheetControl}"
                                      syncfusion:SkinStorage.VisualStyle="Office2013" />

        <syncfusion:SfSpreadsheet x:Name="spreadsheetControl" Grid.Row="1">
            <Interactivity:Interaction.Behaviors>
                <Behavior:ImportBehavior />
            </Interactivity:Interaction.Behaviors>
        </syncfusion:SfSpreadsheet>

    </Grid>


</syncfusion:RibbonWindow>
