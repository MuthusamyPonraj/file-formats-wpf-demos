<syncfusion:ChromelessWindow x:Class="Printing_2012.MainWindow"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:Behavior="clr-namespace:Printing.Behavior"
                             xmlns:CommandHelper="clr-namespace:Printing.Commands"                            
                             xmlns:Interactivity="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                             Title=""
                             Width="1024"
                             Height="720"
                             Icon="App.ico"
                             ShowIcon="False"
                             syncfusion:SkinStorage.VisualStyle="Office2013"
                             >

    <Grid>
        <Grid Margin="0,0,0,0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="95" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--  Header Panel Implementation  -->
            <Border Background="White" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Name="border1"
                        Width="26"
                        Height="45"
                        Margin="0,6,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FF119EDA"
                        BorderBrush="#FF119EDA"
                        BorderThickness="1" />

                    <Grid Grid.Column="1" HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0"
                               Margin="10,10,0,0"
                               HorizontalAlignment="Left"
                               FontFamily="Segoe WP"
                               FontSize="35"
                               Foreground="#FF119EDA"
                               Text="Printing" />
                        <TextBlock Grid.Row="1"
                               Margin="10,0,0,7"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom"
                               FontFamily="Segoe WP"
                               FontSize="16"
                               Text="This sample demonstrates the printing support in spreadsheet control."
                               TextWrapping="Wrap" />
                    </Grid>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="35,0,35,35">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="78*" />
                    <ColumnDefinition Width="22*" />
                </Grid.ColumnDefinitions>

                <!--  GridView  -->
                <Border Grid.Column="0">
                    <syncfusion:SfSpreadsheet Name="spreadsheetControl" syncfusion:SkinStorage.VisualStyle="Office2013" FormulaBarVisibility="Collapsed">
                        <Interactivity:Interaction.Behaviors>
                            <Behavior:ImportBehavior />
                        </Interactivity:Interaction.Behaviors>
                    </syncfusion:SfSpreadsheet>
                </Border>

                <!-- UserOptions  -->
                <Border Grid.Column="1">
                    <ItemsControl>
                        <Label 
                            Name="label1"  
                            Content="Printing Options"    
                            Height="30"  
                            Canvas.Left="10" Canvas.Top="10"   
                            FontSize="15" 
                            FontWeight="Bold" />

                        <Border 
                            Name="border2"
                            Width="120"
                            Height="3"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Left"
                            Background="#FF119EDA"
                            BorderBrush="#FF119EDA"
                            BorderThickness="1" />
                        
                        <Button 
                                Height="30"
                                Margin="15,10,0,0"
                                Command="CommandHelper:PrintingCommand.DirectPrint"
                                CommandTarget="{Binding ElementName=spreadsheetControl}"
                                Content="Print">
                                </Button>

                        <Button 
                                Grid.Row="1"
                                Height="30"
                                Margin="15,10,0,0"
                                Command="CommandHelper:PrintingCommand.PrintPreview"
                                CommandTarget="{Binding ElementName=spreadsheetControl}"
                                Content="Print Preview">
                        </Button>
                    </ItemsControl>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</syncfusion:ChromelessWindow>
