<syncfusion:ChromelessWindow x:Class="AutoShapes.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="AutoShapes"
    Icon="App.ico"
    WindowStyle="SingleBorderWindow"
    syncfusion:SkinStorage.VisualStyle="Metro"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="388" Height="251"
>
    <Grid >
       <Image VerticalAlignment="Top" Height="82" Name="image1" Stretch="None" />

        <TextBlock FontFamily="Verdana" FontSize="11" TextAlignment="Justify" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,88,0,0" >
           
            
            <TextBlock.Text>
Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please note that MS Excel Viewer or MS Excel is required to view the resultant document.
            </TextBlock.Text>
        </TextBlock>

        <Button Click="Button_Click" Margin="10,0,12,26" VerticalAlignment="Bottom" Height="26" BorderBrush="LightBlue" HorizontalAlignment="Right" Width="77">
            
         
            <StackPanel Orientation= "Horizontal">
                <TextBlock Text="Create" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </StackPanel>
        </Button> 
        <GroupBox Header="Save As" Height="40" VerticalAlignment="Bottom" Margin="12,0,104,24">
            <StackPanel Orientation="Horizontal" Width="250" Margin="8,1,2,1">
                <RadioButton GroupName="Group1" VerticalContentAlignment="Center" Name="rdButtonxlsx" Margin="0,0,10,0">Excel 2007</RadioButton>
                <RadioButton GroupName="Group1" VerticalContentAlignment="Center" Name="rdButtonexcel2010" Margin="0,0,10,0">Excel 2010</RadioButton>
                <RadioButton GroupName="Group1" Name="rdButtonexcel2013" IsChecked="True"  VerticalContentAlignment="Center" Margin="0,0,10,0">Excel 2013</RadioButton>
            </StackPanel>
        </GroupBox>
    </Grid>
 </syncfusion:ChromelessWindow>
