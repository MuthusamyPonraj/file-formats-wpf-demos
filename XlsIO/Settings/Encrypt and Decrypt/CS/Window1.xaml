<syncfusion:ChromelessWindow  x:Class="EncryptionDecryption.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="Advanced Encrypt and Decrypt"
    Icon="App.ico"
    syncfusion:SkinStorage.VisualStyle="Metro"
    WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="435" Height="426"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="82"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" VerticalAlignment="Top" Name="image1" Stretch="None"/>
        <StackPanel Grid.Row="1">
            <TextBlock TextAlignment="Justify" FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Margin="5,5,5,5" >
            <TextBlock.Text>
Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please note that MS Excel Viewer or MS Excel is required to view the resultant document.
            </TextBlock.Text>
        </TextBlock>
            <GroupBox BorderBrush="LightBlue" Margin="3,2,3,5">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock TextDecorations="Underline" Foreground="MidnightBlue" FontWeight="SemiBold" Text="Encrypt Spreadsheet"></TextBlock>
                    </StackPanel>
                </GroupBox.Header>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Width="120">Source Document</Label>
                        <TextBox Name="txtEncryptSource" Width="160" VerticalAlignment="Center"></TextBox>
                        <Button Name="browseEncrypt" Click="browseEncrypt_Click" Margin="5,0,0,0" VerticalAlignment="Center">Browse</Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Width="120">Password to Open</Label>
                        <PasswordBox Name="txtEnOpen" Width="220" VerticalAlignment="Center"></PasswordBox>
                    </StackPanel>
                    <StackPanel Margin="5,3,5,0" Orientation="Horizontal">
                        <GroupBox Header="Save As" Height="40" Width="256" Margin="9,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <RadioButton GroupName="Group1" Margin="0,0,10,0" Name="rdButtonxlsx" VerticalContentAlignment="Center" IsChecked="True">Excel 2007</RadioButton>
                                <RadioButton GroupName="Group1" Margin="0,0,10,0" Name="rdButtonexcel2010" VerticalContentAlignment="Center">Excel 2010</RadioButton>
                                <RadioButton GroupName="Group1" Margin="0,0,10,0" Name="rdButtonexcel2013" VerticalContentAlignment="Center">Excel 2013</RadioButton>
                            </StackPanel>
                        </GroupBox>
                        <Button IsEnabled="False" x:Name="btnEncrypt" Click="btnEncrypt_Click" HorizontalAlignment="Right" Margin="76,10,0,0" Width="auto" Height="26" BorderBrush="LightBlue" RenderTransformOrigin="2.479,0.385">
                            <StackPanel Orientation= "Horizontal">
                                <TextBlock Text="Encrypt" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Center" RenderTransformOrigin="1,0.5"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox BorderBrush="LightBlue" Margin="3,3,3,5">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock TextDecorations="Underline" Foreground="MidnightBlue" FontWeight="SemiBold" Text="Decrypt Spreadsheet"></TextBlock>
                    </StackPanel>
                </GroupBox.Header>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Width="120">Source Document</Label>
                        <TextBox Name="txtDecryptSource" Width="160" VerticalAlignment="Center"></TextBox>
                        <Button Name="browseDecrypt" Click="browseDecrypt_Click" Margin="5,0,0,0" VerticalAlignment="Center">Browse</Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Width="120">Password to Open</Label>
                        <PasswordBox Name="txtDeOpen" Width="220" VerticalAlignment="Center"></PasswordBox>
                    </StackPanel>
                    <StackPanel Margin="5,3,5,0" Orientation="Horizontal">
                        <GroupBox Header="Save As" Height="40" Width="259" Margin="9,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <RadioButton GroupName="Group2" Margin="0,0,10,0" Name="rdButtonxlsxDecrypt" VerticalContentAlignment="Center" IsChecked="True">Excel 2007</RadioButton>
                                <RadioButton GroupName="Group2" Margin="0,0,10,0" Name="rdButtonexcel2010Decrypt" VerticalContentAlignment="Center">Excel 2010</RadioButton>
                                <RadioButton GroupName="Group2" Margin="0,0,10,0" Name="rdButtonexcel2013Decrypt" VerticalContentAlignment="Center">Excel 2013</RadioButton>
                            </StackPanel>
                        </GroupBox>
                        <Button Name="btnDecrypt" Click="btnDecrypt_Click" IsEnabled="False" HorizontalAlignment="Right" Margin="71,10,0,0" Width="auto" Height="25" BorderBrush="LightBlue">
                            <StackPanel Orientation= "Horizontal">
                                <TextBlock Text="Decrypt" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5"/>
            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</syncfusion:ChromelessWindow>