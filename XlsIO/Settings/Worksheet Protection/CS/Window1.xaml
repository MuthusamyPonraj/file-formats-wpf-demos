<syncfusion:ChromelessWindow  x:Class="WorksheetProtection.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="Worksheet Protection"
    Icon="App.ico"
    WindowStyle="SingleBorderWindow"
    syncfusion:SkinStorage.VisualStyle="Metro"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="355" Height="213"
    >
    <Grid>
        <Image VerticalAlignment="Top" Height="82" Name="image1" Stretch="None"/>

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,77,0,1" >
            <TextBlock.Text>
Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please note that MS Excel Viewer or MS Excel is required to view the resultant document.
            </TextBlock.Text>
        </TextBlock>

        <Button Name="btnLock" Click="btnLock_Click"  HorizontalAlignment="Left" Margin="36,0,0,17" VerticalAlignment="Bottom" Width="auto" Height="25" BorderBrush="LightBlue">
            <StackPanel Orientation= "Horizontal">
                <TextBlock Text="Worksheet Locking" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button IsEnabled="False" Name="btnUnlock" Click="btnUnlock_Click"  HorizontalAlignment="Right" Margin="0,0,30,17" VerticalAlignment="Bottom" Width="auto" Height="25" BorderBrush="LightBlue">
            <StackPanel Orientation= "Horizontal">
                <TextBlock Text="Worksheet Unlocking" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</syncfusion:ChromelessWindow>