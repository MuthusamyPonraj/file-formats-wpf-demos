<syncfusion:ChromelessWindow x:Class="Performance.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"                             
    Title="Performance"
      Icon="App.ico"
     syncfusion:SkinStorage.VisualStyle="Metro"                            
    WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize" 
    WindowStartupLocation="CenterScreen"
	Width="400" Height="489"
    >
    <Grid Margin="0,0,4,0" Height="454" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="82"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Stretch="None" Grid.Row="0" VerticalAlignment="Top"  Name="image1" Margin="0,0,-4,0"/>
        <WrapPanel Grid.Row="1" Margin="0,0,-4,10">
            <TextBlock Width="369" FontFamily="Verdana" TextAlignment="Justify" FontSize="11" TextWrapping="Wrap" Margin="15,5,0,0">
                <TextBlock.Text>
                    Click the button to view the Excel document generated by Essential XlsIO. Please note that Microsoft Excel is required to view the resultant document.
                </TextBlock.Text>
            </TextBlock>
            <TextBlock Width="369" FontFamily="Verdana" TextAlignment="Justify" FontSize="11" TextWrapping="Wrap" Margin="15,10,0,10">
                <TextBlock.Text>
                    Import on Save option directly serialize data while saving the workbook. Cell formatting cannot be applied.
                </TextBlock.Text>
            </TextBlock>
            <GroupBox Margin="11,5,1,3" Width="376" Height="77">
                <WrapPanel Margin="0,0,-1,11.667">
                    <Label Width="173" Margin="3" Content="Enter the number of Rows"/>
                    <TextBox x:Name="textBoxRow" Height="20" TextWrapping="Wrap" Text="50000" Width="85" Margin="178,-75,50,-50"/>
                    <Label Width="172" Margin="3" Content="Enter the number of Columns"/>
                    <TextBox x:Name="textBoxColumn" Height="19" TextWrapping="Wrap" Text="50" Width="85"/>
                    <CheckBox x:Name="checkBoxColumn" Height="19" IsChecked="True" Margin="270,-22,0,25" Content="Column Style" Checked="CheckBoxColumn_Checked" Width="96" UseLayoutRounding="False"/>
                </WrapPanel>
            </GroupBox>
            <StackPanel Orientation="Horizontal" Height="87">

                <GroupBox Header="Save As" Height="88" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,-2,0,0.667" Width="376">
                    <StackPanel Orientation="Vertical" Margin="-4,4,1,-8.333">
                        <RadioButton GroupName="Group1" VerticalContentAlignment="Center" Name="rdButtonxls" Margin="6,9,282.667,0" Click="RdButtonxls_Click" Unchecked="RdButtonxls_Unchecked">Excel 2003</RadioButton>
                        <RadioButton GroupName="Group1" VerticalContentAlignment="Center" Name="rdButtonxlsx" Margin="6,10,283.667,0">Excel 2007</RadioButton>
                        <RadioButton GroupName="Group1" VerticalContentAlignment="Center" Name="rdButtonexcel2010" Margin="130,-65,154.667,0" Height="17">Excel 2010</RadioButton>
                        <RadioButton GroupName="Group1" Name="rdButtonexcel2013"  IsChecked="True" VerticalContentAlignment="Center" Margin="130,-17,162.667,0">Excel 2013</RadioButton>
                    </StackPanel>
                </GroupBox>
                <CheckBox Name="importOnSave" Margin="-120,27,205,42" Checked="ImportOnSave_Checked" UseLayoutRounding="False" Width="104.725">Import on Save</CheckBox>
                <Button Click="Button_Click" Content="Create Document" Margin="-308,0,205,9.667" VerticalAlignment="Bottom" Width="109" Height="25" BorderBrush="LightBlue"/>
            </StackPanel>
            <TextBox x:Name="textLog" Margin="12,9,-10,0" Height="92" Background="#ECE9D8" IsReadOnly="True" Width="374" Loaded="TextLog_Loaded"/>
        </WrapPanel>
    </Grid>
</syncfusion:ChromelessWindow>
