<syncfusion:ChromelessWindow x:Class="TemplateMarker.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"                             
    Title="Template Marker"
      Icon="App.ico"
     syncfusion:SkinStorage.VisualStyle="Metro"                            
    WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="354" Height="398"
    
        Loaded="Window_Loaded">
    <Grid>
        <Image VerticalAlignment="Top" Height="82" Name="image1" Stretch="None"/>

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,82,0,-8" HorizontalAlignment="Left" Width="348" Height="295" VerticalAlignment="Top" >
            <Run Text="Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please note that MS Excel Viewer or MS Excel is require"/><InlineUIContainer>

        	</InlineUIContainer><Run Text="d to view the result"/><Run Text="ant docu"/><Run Text="ment."/></TextBlock>

        <Button Click="Button_Click" HorizontalAlignment="Left" Margin="40,0,0,17" VerticalAlignment="Bottom" Width="125" Height="25" BorderBrush="LightBlue">
            <StackPanel Orientation= "Horizontal" Width="100">
                <TextBlock Text="Create Xlsx" Margin="20,2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="61"/>
            </StackPanel>
        </Button>
        <GroupBox Margin="40,132,40,0" Height="35" VerticalAlignment="Top">
            <StackPanel Margin="10,0,10,-6" Orientation="Horizontal" Grid.RowSpan="2" Height="35" VerticalAlignment="Top">
                <RadioButton Content="DataTable" HorizontalAlignment="Left" IsChecked="True"  x:Name="rdbDataTable" Width="118" Margin="0,10,0,9"/>
                <RadioButton Content="CLR Objects" x:Name="rdbObjects" HorizontalAlignment="Right" Width="118" Margin="12,10,0,9"  />
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Marker with Image" Margin="40,172,40,50">
            <StackPanel Margin="10,10,59,-2" Grid.Row="1" >
                <RadioButton GroupName="OutputStyle" x:Name="rdImageOnly"  Content="Image Only"  Height="22"/>
                <RadioButton GroupName="OutputStyle" x:Name="rdImagewtSize" Content="Image with Size" Height="22" />
                <RadioButton GroupName="OutputStyle" x:Name="rdImagewtPosition" Content="Image with Position" Height="22" />
                <RadioButton GroupName="OutputStyle" x:Name="rdImagewtSizeAndPosition" Content="Image with Size and Position" Height="22" IsChecked="True"/>
                <RadioButton GroupName="OutputStyle" x:Name="rdImageFitToCell" Content="Image Fit To Cell" Height="22" />
            </StackPanel>
        </GroupBox>
        <Button Click="Button_Input_Click" BorderBrush="LightBlue" Height="25" Margin="183,0,40,17" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal" Width="104">
                <TextBlock HorizontalAlignment="Right" Margin="13,2" Text="Input Template" VerticalAlignment="Center" />
            </StackPanel>
        </Button>

    </Grid>
</syncfusion:ChromelessWindow>
