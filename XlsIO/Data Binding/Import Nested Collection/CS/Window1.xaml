<syncfusion:ChromelessWindow x:Class="ImportNestedCollection.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"                             
    Title="Import from Nested Collections" Width="355.333" Height="397.825"
     Icon="App.ico"
     syncfusion:SkinStorage.VisualStyle="Metro"                             
        WindowStyle="SingleBorderWindow"
    WindowStartupLocation="CenterScreen" Closing="Window_Closing" ResizeMode="NoResize">
    <Grid Margin="23,1,0,9.333" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="69*"/>
            <ColumnDefinition Width="364*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="82"></RowDefinition>
            <RowDefinition Height="76.667"></RowDefinition>
            <RowDefinition Height="13.333"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Name="image1" Stretch="None" Grid.ColumnSpan="2" Margin="-20,0,0,3" />
        <Label Grid.ColumnSpan="2" Grid.Row="1" Margin="-20,2,-0.333,5" Grid.RowSpan="3" >
            <TextBlock TextWrapping="Wrap" Height="63" Width="337"><Run Text="Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please note that MS Excel Viewer or MS Excel is required to the resultant document."/></TextBlock>
        </Label>
        <GroupBox Header="Import with Layout and Group Options" Grid.Row="1" Height="167" Margin="25,68,0,0" Name="groupBox1" VerticalAlignment="Top" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="255" Grid.RowSpan="3">
            <Grid Margin="-10,0,-5,0" Height="150" VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="60*"/>
                    <RowDefinition Height="25*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25*" />
                    <ColumnDefinition Width="80*"/>
                    <ColumnDefinition Width="71*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="label4" Grid.Column="0" Grid.ColumnSpan="2" Height="28" Margin="8,6,5.101,0"  VerticalAlignment="Top" Content="Layout Options" RenderTransformOrigin="-0.118,0.708"/>
                <ComboBox Grid.Column="2" Grid.ColumnSpan="2" Height="23" Margin="-1,6,0,0" Name="cmbLayout" VerticalAlignment="Top" HorizontalAlignment="Left" Width="146" />
                <CheckBox x:Name="checkBox"  Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="3" FlowDirection="LeftToRight" Margin="78.667,11.333,0,0" Content="Apply Group" HorizontalAlignment="Left" VerticalAlignment="Top" Width="110" Height="21" Checked="checkBox_Changed" Unchecked="checkBox_Changed"/>
                <GroupBox x:Name="groupBox2" Grid.ColumnSpan="3" Grid.Row="1" Grid.Column="2" Header="Options" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Top" Height="79" Width="147" Margin="-2,32.667,0,0" Grid.RowSpan="3">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120*" />
                            <ColumnDefinition Width="30*"/>
                        </Grid.ColumnDefinitions>
                        <RadioButton x:Name="rdbExpand" Grid.Row="0" Content="Expand" VerticalAlignment="Center" Margin="0,6,0,0" Height="20" HorizontalAlignment="Left" Checked="expandCollapse_Checked"/>
                        <RadioButton x:Name="rdbCollapse" Grid.Row="1" Content="Collapse at Level" VerticalAlignment="Center" Margin="0,6,0,0" Height="26" HorizontalAlignment="Left" Checked="expandCollapse_Checked"/>
                        <TextBox Name="tbLevel" Grid.Column="1" Grid.Row="1" Height="23" Text="1" IsEnabled="False" Margin="2,0,0,0" PreviewTextInput="numberValidation_TextBox" />
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>
        <Button x:Name="button1" Click="button_Click" Margin="118,8,50.667,0" Grid.Column="1" Content="Create Excel" Grid.Row="4"/>
    </Grid>
</syncfusion:ChromelessWindow>
