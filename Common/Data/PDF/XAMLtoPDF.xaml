<UserControl 
    Name="UserControlToolTip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="0,0,138,0" Height="512" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="373*"/>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="66*"/>
        </Grid.ColumnDefinitions>
        <Image Source="Careers.png" Margin="0,0,-310,-12" Grid.ColumnSpan="3" Stretch="Fill" RenderTransformOrigin="0.425,0.484"/>
        <Label Content="First Name&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="64,91,0,0" RenderTransformOrigin="-3.711,-1.5" Width="114" Foreground="#FF1038EC"/>
        <Label Content="Last Name" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="1.842,4.5" Margin="64,128,0,0" Foreground="#FF1038EC"/>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" Margin="293,128,0,0" RenderTransformOrigin="0.351,0.761"/>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="211" Margin="292,91,0,0"/>
        <Label Content="Email" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="1.395,6" Margin="64,163,0,0" Foreground="#FF1038EC"/>
        <Label Content="Mobile No&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="64,200,0,0" Width="84" Foreground="#FF1038EC" RenderTransformOrigin="0.637,0.548"/>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="211" Margin="292,205,0,0"/>
        <TextBox HorizontalAlignment="Left" Height="24" TextWrapping="Wrap" VerticalAlignment="Top" Width="211" Margin="294,165,0,0" />
        <Label Content="Education Grade&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="51,295,0,0" Width="106" Foreground="#FFAA0909" RenderTransformOrigin="0.439,-0.619" Height="63"/>
        <Label Content="Which position  are you&#xA;applying for?&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="64,237,0,0" RenderTransformOrigin="0.436,0.621" Foreground="#FF1038EC"/>
        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="211" Margin="293,252,0,0"/>
        <Label Content="General Information" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="2.211,2.346" Margin="51,65,0,0" Foreground="#FFAA0909"/>
        <Label Content="Highest Qualification" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="64,320,0,0" RenderTransformOrigin="0.842,-1.231" Foreground="#FF1038EC"/>
        <CheckBox Content="Post Graduate" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="64,406,0,0" Foreground="#FF1038EC" RenderTransformOrigin="0.5,0.5" Height="20" Width="126">
        </CheckBox>
        <CheckBox Content="College" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="367,370,0,0" Foreground="#FF1038EC" Width="95" Height="24"/>
        <CheckBox Content="Bachelor degree" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="236,370,0,0" Foreground="#FF1038EC" Height="24" Width="125"/>
        <CheckBox Content="Associate degree" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="64,370,0,0" Width="143"  Foreground="#FF1038EC" Height="24"/>
        <CheckBox Content="MBA" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="237,411,0,0"  Foreground="#FF1038EC" RenderTransformOrigin="-0.75,0.503" Height="26" Width="62">           
        </CheckBox>
    </Grid>
</UserControl>
